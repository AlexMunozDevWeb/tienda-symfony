        <h2 class="h2-forms">Formulario login</h2>
        {{ form(login_form)}}
      </div>
      <div class="register-container">
        <h2 class="h2-forms">Formulario de registro</h2>
        {{ form(registration_form)}}
      </div>
      {% endif %}

    </div>
  </section>
  


