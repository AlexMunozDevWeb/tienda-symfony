{% extends 'base.html.twig' %}

{% block title %}PÃ¡gina de inicio!{% endblock %}

{% block body %}
  <section class="section-hero">
    <div class="swiper swiper-hero">
      <!-- Additional required wrapper -->
      <div class="swiper-wrapper wrapper-hero">
        <div class="swiper-slide slide-hero"><img class="slider-img" src="{{ asset( 'images/products/image-product-1.jpg' ) }}" alt="Imagen1"></div>
        <div class="swiper-slide slide-hero"><img class="slider-img" src="{{ asset( 'images/products/image-product-2.jpg' ) }}" alt="Imagen2"></div>
        <div class="swiper-slide slide-hero"><img class="slider-img" src="{{ asset( 'images/products/image-product-3.jpg' ) }}" alt="Imagen3"></div>
        <div class="swiper-slide slide-hero"><img class="slider-img" src="{{ asset( 'images/products/image-product-4.jpg' ) }}" alt="Imagen4"></div>
      </div>
      <!-- If we need navigation buttons -->
      <div class="arrow-container">
        <div class="swiper-button-prev"><img class="img-prev" src="{{ asset('images/icon-previous.svg') }}" alt="Prev imagen"></div>
        <div class="swiper-button-next"><img class="img-next" src="{{ asset('images/icon-next.svg') }}" alt="Prev imagen"></div>
        <a class="anchor" data-content="go-to-content">
          <img class="img-go-down" src="{{ asset('images/go-down.svg') }}" alt="Ancla">
        </a>
      </div>

    </div>
    <div id="go-to-content"></div>    
  </section>

  {% for pro_cat in products_categories %}
  <section class="sn-container show-productos container-products-{{ pro_cat.cantidad }}">
    <h3>{{ pro_cat.nombre }}</h3>
        {% for product in products %}
          {% if product.id_cat_id == pro_cat.id %}
            <a href="/productos/{{ product.id }}">{{ product.nombre }}</a><br>
          {% endif %}
        {% endfor %}  
  </section>
  {% endfor %}

  <h3>Formulario de registro</h3>
  {{ form(registration_form)}}

{% endblock %}
